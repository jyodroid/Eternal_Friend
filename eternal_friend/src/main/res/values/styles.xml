<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomBarTitle" parent="AppTheme">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="input_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AddFabPadding">
        <item name="android:layout_marginStart">@dimen/fab_margin</item>
        <item name="android:layout_marginEnd">@dimen/fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
    </style>

    <style name="SearchFabPadding">
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>
</resources>
