<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/delete_card_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height_size"
    android:gravity="center"
    android:layout_marginBottom="@dimen/card_margin"
    android:background="@color/delete_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/delete_text_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_prompt"
        android:layout_margin="@dimen/card_margin"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/card_margin"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/delete_button_color"
            android:textColor="@android:color/white"
            android:text="@string/delete_button_delete"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/cancel_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/delete_button_cancel"/>

    </LinearLayout>

</LinearLayout>