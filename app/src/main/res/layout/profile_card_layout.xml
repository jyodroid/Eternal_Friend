<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_margin"
    card:cardBackgroundColor="@color/cardColor"
    card:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_pet_picture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:scaleType="fitXY"
            android:src="@drawable/ic_image_black_48dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="end"
            android:layout_marginStart="@dimen/activity_margin"
            android:layout_gravity="end|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_pet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="NAME"
                android:textSize="@dimen/pet_name_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_pet_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="age"
                android:textSize="@dimen/profile_normal_text" />

            <TextView
                android:id="@+id/profile_pet_breed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breed"
                android:maxLines="2"
                android:fontFamily="sans-serif-condensed"
                android:textSize="@dimen/profile_normal_text" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/delete_profile_image"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/cardColor"
            android:src="@drawable/ic_clear_black_18dp"/>

    </LinearLayout>


</android.support.v7.widget.CardView>