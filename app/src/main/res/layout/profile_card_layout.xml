<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="@dimen/card_elevation"
    android:translationZ="@dimen/card_elevation_selected">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_pet_picture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_image_black_48dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:orientation="vertical"
            android:paddingEnd="@dimen/activity_padding">

            <TextView
                android:id="@+id/profile_pet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="NAME"
                android:textSize="@dimen/pet_name_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_pet_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="age"
                android:textSize="@dimen/profile_normal_text" />

            <TextView
                android:id="@+id/profile_pet_breed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breed"
                android:textSize="@dimen/profile_normal_text" />

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>